<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5px"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView
        android:text="@string/help_remote_head"
        android:textSize="14px"
        android:typeface="normal"
        android:textStyle="bold"
        android:paddingBottom="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/help_remote_body"
        android:typeface="normal"
        android:paddingLeft="5px"
        android:paddingBottom="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/help_activate_cmd"
        android:typeface="sans"
        android:textStyle="bold"
        android:paddingLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/help_activate_description"
        android:paddingLeft="10px"
        android:paddingBottom="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    <TextView
        android:text="@string/help_deactivate_cmd"
        android:typeface="sans"
        android:textStyle="bold"
        android:paddingLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/help_deactivate_description"
        android:paddingLeft="10px"
        android:paddingBottom="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    <TextView
        android:text="@string/help_set_email_cmd"
        android:typeface="sans"
        android:textStyle="bold"
        android:paddingLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/help_set_email_description"
        android:paddingLeft="10px"
        android:paddingBottom="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
</LinearLayout>
